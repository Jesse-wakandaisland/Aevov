/* /assets/css/admin.css */
/* General */
.wrap {
    margin: 20px;
}

/* Status Indicators */
.status-indicator {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 4px;
    margin-right: 8px;
}

.status-active {
    background-color: #dff0d8;
    color: #3c763d;
}

.status-error {
    background-color: #f2dede;
    color: #a94442;
}

.status-pending {
    background-color: #fcf8e3;
    color: #8a6d3b;
}

/* Pattern List Table */
.tablenav {
    margin: 16px 0;
}

.tablenav select {
    margin-right: 8px;
}

/* BLOOM Integration */
.integration-status {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 24px;
}

.status-card {
    background: #fff;
    border: 1px solid #ccd0d4;
    padding: 16px;
    border-radius: 4px;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
    margin-top: 16px;
}

.stat-item label {
    display: block;
    color: #666;
    font-size: 12px;
}

.stat-item span {
    font-size: 18px;
    font-weight: 600;
}

/* Chunk Upload Section */
.chunk-upload {
    background: #fff;
    border: 1px solid #ccd0d4;
    padding: 20px;
    margin-top: 20px;
    border-radius: 4px;
}

.chunk-upload-form {
    display: grid;
    gap: 16px;
    max-width: 600px;
}

.form-row {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.form-row label {
    font-weight: 600;
}

.chunk-preview {
    background: #f8f9fa;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    max-height: 200px;
    overflow-y: auto;
}

.chunk-list {
    margin-top: 24px;
}

.chunk-item {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 16px;
    padding: 12px;
    background: #f8f9fa;
    border: 1px solid #ddd;
    margin-bottom: 8px;
    border-radius: 4px;
    align-items: center;
}

.chunk-sku {
    font-weight: 600;
}

.chunk-meta {
    color: #666;
    font-size: 12px;
}

.chunk-actions {
    display: flex;
    gap: 8px;
}